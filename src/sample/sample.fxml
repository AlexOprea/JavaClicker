<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <CheckBox fx:id="rcCheckbox" mnemonicParsing="false" text="RightClick" GridPane.columnIndex="1" onAction="#onSelectedCheckbox"/>
      <CheckBox fx:id="lcCheckbox" mnemonicParsing="false" prefHeight="17.0" prefWidth="78.0" text="LeftClick" onAction="#onSelectedCheckbox" />
      <Button fx:id="startBtn" mnemonicParsing="false" text="Start" GridPane.rowIndex="2" onAction="#handleStart" />
      <Button fx:id="stopBtn" mnemonicParsing="false" text="Stop" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#handleStop"/>
   </children>
</GridPane>
